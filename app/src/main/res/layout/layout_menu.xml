<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/saswell_pink"
    android:layout_width="250dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/MenuTabText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/saswell_pink2"
            android:text="" />
        <TextView
            style="@style/MenuTabText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/saswell_pink2"
            android:drawableStart="@drawable/cat"
            android:text="新闻" />

        <TextView
            style="@style/MenuTabText"
            android:layout_height="65dp"
            android:background="@color/saswell_pink2"
            android:drawableStart="@drawable/cat2"
            android:text="订阅" />

        <TextView
            style="@style/MenuTabText"
            android:layout_height="65dp"
            android:background="@color/saswell_pink2"
            android:text="跟帖"
            app:drawableLeftCompat="@drawable/icon_com1" />
        <TextView
            style="@style/MenuTabText"
            android:layout_height="65dp"
            android:background="@color/saswell_pink2"
            android:text="图片"
            app:drawableStartCompat="@drawable/icon_com1" />
        <TextView
            style="@style/MenuTabText"
            android:layout_height="65dp"
            android:background="@color/saswell_pink2"
            android:text="话题"
            app:drawableLeftCompat="@drawable/icon_com1" />
        <TextView
            style="@style/MenuTabText"
            android:layout_height="65dp"
            android:background="@color/saswell_pink2"
            android:text="投票"
            app:drawableLeftCompat="@drawable/icon_com1" />
        <TextView
            style="@style/MenuTabText"
            android:layout_height="65dp"
            android:background="@color/saswell_pink2"
            android:text="聚合阅读"
            android:drawableStart="@drawable/icon_com1"/>
    </LinearLayout>
</ScrollView>