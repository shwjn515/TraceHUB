<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:orientation="vertical"
    android:background="@color/saswell_pink">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:background="@color/saswell_pink2"
        android:gravity="center_vertical"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/touxiang"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎您，"
                    android:textColor="#ffffff"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156****8293"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/saswell_pink2"
                android:drawableLeft="@drawable/icon_shezhi"
                android:drawableRight="@drawable/icon_tiaozhuan"
                android:drawablePadding="5dp"
                android:text="设置"
                android:textAlignment="textStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/saswell_pink2"
                android:drawableLeft="@drawable/icon_wenti"
                android:drawableRight="@drawable/icon_tiaozhuan"
                android:drawablePadding="5dp"
                android:text="常见问题"
                android:textAlignment="textStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/saswell_pink2"
                android:drawableLeft="@drawable/icon_yijian"
                android:drawableRight="@drawable/icon_tiaozhuan"
                android:drawablePadding="5dp"
                android:text="意见反馈"
                android:textAlignment="textStart"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/saswell_pink2"
                android:drawableLeft="@drawable/icon_gengduo"
                android:drawableRight="@drawable/icon_tiaozhuan"
                android:drawablePadding="5dp"
                android:text="更多"
                android:textAlignment="textStart"
                android:textColor="#ffffff" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>